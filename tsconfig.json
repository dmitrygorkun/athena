{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "dist",
        "lib": [
            "es2020",
            "dom"
        ],
        "allowJs": true,
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@common/*": ["src/common/*"],
            "@geo/*": ["src/geo/*"]
        }
    },
    "exclude": ["node_modules", "tmp", "dist"]
}